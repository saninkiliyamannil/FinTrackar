generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id          String   @id @default(cuid())
  email       String   @unique
  passwordHash String
  displayName String?
  image       String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  bankAccounts BankAccount[]
  transactions Transaction[]
  categories   Category[]
  budgets      Budget[]
  goals        Goal[]
  sharedExpenses SharedExpense[]
  sharedGroupsCreated SharedGroup[] @relation("GroupCreator")
  sharedGroupMemberships SharedGroupMember[]
  sharedSettlementsCreated SharedSettlement[] @relation("SettlementCreator")

  @@index([createdAt])
}

model BankAccount {
  id        String   @id @default(cuid())
  name      String
  type      AccountType
  balance   Decimal  @default(0) @db.Decimal(14, 2)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  userId String
  user   User @relation(fields: [userId], references: [id], onDelete: Cascade)

  transactions Transaction[]

  @@index([userId, createdAt])
}

model Transaction {
  id        String          @id @default(cuid())
  amount    Decimal         @db.Decimal(14, 2)
  note      String?
  date      DateTime        @default(now())
  type      TransactionType
  currency  String          @default("USD")
  createdAt DateTime        @default(now())
  updatedAt DateTime        @updatedAt

  userId        String
  bankAccountId String?
  categoryId    String?

  user        User         @relation(fields: [userId], references: [id], onDelete: Cascade)
  bankAccount BankAccount? @relation(fields: [bankAccountId], references: [id], onDelete: SetNull)
  category    Category?    @relation(fields: [categoryId], references: [id], onDelete: SetNull)

  tags TransactionTag[]

  @@index([userId, date])
  @@index([userId, type, date])
  @@index([categoryId])
}

model Category {
  id        String   @id @default(cuid())
  name      String
  color     String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  type      CategoryType
  icon      String?

  userId String
  user   User @relation(fields: [userId], references: [id], onDelete: Cascade)

  transactions Transaction[]
  budgets      Budget[]

  @@unique([userId, name])
  @@index([userId, createdAt])
}

model Budget {
  id        String   @id @default(cuid())
  amount    Decimal  @db.Decimal(14, 2)
  month     Int
  year      Int
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  userId     String
  categoryId String

  user     User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  category Category @relation(fields: [categoryId], references: [id], onDelete: Cascade)

  @@unique([userId, categoryId, month, year])
}

model Goal {
  id            String     @id @default(cuid())
  name          String
  targetAmount  Decimal    @db.Decimal(14, 2)
  currentAmount Decimal    @default(0) @db.Decimal(14, 2)
  targetDate    DateTime?
  note          String?
  status        GoalStatus @default(ACTIVE)
  createdAt     DateTime   @default(now())
  updatedAt     DateTime   @updatedAt

  userId String
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId, status, targetDate])
}

model SharedExpense {
  id          String            @id @default(cuid())
  title       String
  note        String?
  totalAmount Decimal           @db.Decimal(14, 2)
  date        DateTime          @default(now())
  splitMethod SharedSplitMethod @default(EQUAL)
  createdAt   DateTime          @default(now())
  updatedAt   DateTime          @updatedAt

  userId String
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  groupId String?
  group   SharedGroup? @relation(fields: [groupId], references: [id], onDelete: SetNull)

  participants SharedExpenseParticipant[]

  @@index([userId, date])
  @@index([groupId, date])
}

model SharedExpenseParticipant {
  id              String   @id @default(cuid())
  participantName String
  shareAmount     Decimal  @db.Decimal(14, 2)
  paidAmount      Decimal  @default(0) @db.Decimal(14, 2)
  isSettled       Boolean  @default(false)
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  sharedExpenseId String
  sharedExpense   SharedExpense @relation(fields: [sharedExpenseId], references: [id], onDelete: Cascade)

  @@index([sharedExpenseId, isSettled])
  @@unique([sharedExpenseId, participantName])
}

model SharedGroup {
  id          String   @id @default(cuid())
  name        String
  description String?
  inviteCode  String   @unique
  isPersonal  Boolean  @default(false)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  createdById String
  createdBy   User @relation("GroupCreator", fields: [createdById], references: [id], onDelete: Cascade)

  members      SharedGroupMember[]
  expenses     SharedExpense[]
  settlements  SharedSettlement[]

  @@index([createdById, createdAt])
}

model SharedGroupMember {
  id          String          @id @default(cuid())
  displayName String
  role        SharedGroupRole @default(MEMBER)
  createdAt   DateTime        @default(now())
  updatedAt   DateTime        @updatedAt

  groupId String
  userId  String

  group SharedGroup @relation(fields: [groupId], references: [id], onDelete: Cascade)
  user  User        @relation(fields: [userId], references: [id], onDelete: Cascade)
  outgoingSettlements SharedSettlement[] @relation("SettlementFromMember")
  incomingSettlements SharedSettlement[] @relation("SettlementToMember")

  @@unique([groupId, userId])
  @@index([userId, createdAt])
}

model SharedSettlement {
  id        String                 @id @default(cuid())
  amount    Decimal                @db.Decimal(14, 2)
  note      String?
  status    SharedSettlementStatus @default(PROPOSED)
  settledAt DateTime?
  createdAt DateTime               @default(now())
  updatedAt DateTime               @updatedAt

  groupId      String
  fromMemberId String
  toMemberId   String
  createdById  String

  group      SharedGroup      @relation(fields: [groupId], references: [id], onDelete: Cascade)
  fromMember SharedGroupMember @relation("SettlementFromMember", fields: [fromMemberId], references: [id], onDelete: Cascade)
  toMember   SharedGroupMember @relation("SettlementToMember", fields: [toMemberId], references: [id], onDelete: Cascade)
  createdBy  User             @relation("SettlementCreator", fields: [createdById], references: [id], onDelete: Cascade)

  @@index([groupId, status, createdAt])
}

model Tag {
  id   String @id @default(cuid())
  name String

  transactions TransactionTag[]
}

model TransactionTag {
  transactionId String
  tagId         String

  transaction Transaction @relation(fields: [transactionId], references: [id], onDelete: Cascade)
  tag         Tag         @relation(fields: [tagId], references: [id], onDelete: Cascade)

  @@id([transactionId, tagId])
}

enum TransactionType {
  INCOME
  EXPENSE
}

enum AccountType {
  CASH
  BANK
  CREDIT
  WALLET
}

enum CategoryType {
  INCOME
  EXPENSE
}

enum GoalStatus {
  ACTIVE
  COMPLETED
  ARCHIVED
}

enum SharedSplitMethod {
  EQUAL
  CUSTOM
}

enum SharedGroupRole {
  OWNER
  MEMBER
}

enum SharedSettlementStatus {
  PROPOSED
  SETTLED
  CANCELED
}
